{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "./lib",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "experimentalDecorators": true
  },
  "include": ["./src", "./test"],
  "exclude": ["./node_modules"]
}
